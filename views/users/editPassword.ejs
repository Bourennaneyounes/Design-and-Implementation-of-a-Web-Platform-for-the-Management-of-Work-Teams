<%- include('../partials/profilHeader.ejs')%>

    

<div class="container">
    <div class="row d-flex justify-content-center align-items-center mt-4" >
        <dev class="column col-md-8">
            
            <h2 class="ui header "><span class="inputsTitles">Change Password</span></h2>
            <form id="register-form" class="ui form" action="/users/<%=currentUser._id%>/profil/settings" method="POST">
                <div class="field">
                  <label><span class="inputsTitles">Old Password</span></label>
                  <input type="password" name="oldPassword" placeholder="old Password">
                </div>
               
                 
                <div class="field">
                    <label><span class="inputsTitles">New Password</span></label>
                    <input type="password" name="newPassword" placeholder="New Password">
                </div>
                <div class="field">
                    <label><span class="inputsTitles">Confirmation New Password</span></label>
                    <input type="password" name="cNewPassword" placeholder="Confirmation New Password">
                </div>
                
                <button class="btn btn-outline-success" type="submit" >Submit</button>
                <a class="btn btn-outline-danger" style="margin-left: 350px;" href="/users/<%=currentUser._id%>/profil">Back</a>
              </form>
        </dev>
    </div>
</div>
<script src="/scripts/lib/jquery-3.4.1.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/semantic-ui@2.2.13/dist/semantic.min.js"></script>
    
  </script>
